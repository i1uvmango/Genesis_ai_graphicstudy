<?xml version="1.0"?>
<robot name="muscle_car">

  <!-- 🚘 차체 -->
  <link name="chassis">
    <visual>
      <geometry>
        <mesh filename="car.obj" scale="1 1 1"/>
      </geometry>
      <material name="body_color">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="car.obj" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="25.0"/>
      <inertia ixx="2.0" iyy="2.0" izz="2.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- 🚘 앞왼쪽 바퀴 -->
  <link name="wheel_fl">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="flwheel.obj" scale="1 1 1"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="flwheel.obj" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.05" iyy="0.05" izz="0.05" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- 🚘 앞오른쪽 바퀴 -->
  <link name="wheel_fr">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="frwheel.obj" scale="1 1 1"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="frwheel.obj" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.05" iyy="0.05" izz="0.05" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- 🚘 뒤왼쪽 바퀴 -->
  <link name="wheel_bl">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="blwheel.obj" scale="1 1 1"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="blwheel.obj" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.05" iyy="0.05" izz="0.05" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- 🚘 뒤오른쪽 바퀴 -->
  <link name="wheel_br">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="brwheel.obj" scale="1 1 1"/>
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="brwheel.obj" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.05" iyy="0.05" izz="0.05" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- 🔩 조인트: Blender 기준 좌표 반영 -->
  <joint name="joint_fl" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_fl"/>
    <origin xyz="0.12511 2.53016 0.658992" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint_fr" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_fr"/>
    <origin xyz="2.10912 2.53010 0.657567" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint_bl" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_bl"/>
    <origin xyz="0.12511 -0.83093 0.658992" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint_br" type="continuous">
    <parent link="chassis"/>
    <child link="wheel_br"/>
    <origin xyz="2.10912 -0.83099 0.657567" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
